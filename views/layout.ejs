<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>TinyLink</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid px-4">
      <a class="navbar-brand fw-bold" href="/">TinyLink</a>
    </div>
  </nav>

  <!-- Main -->
  <main class="container-fluid px-4 my-4">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="text-center text-muted py-3 small">
    Â© <%= new Date().getFullYear() %> TinyLink
  </footer>

  <!-- Toast -->
  <div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="appToast" class="toast text-bg-success border-0" role="alert">
      <div class="d-flex">
        <div class="toast-body" id="appToastBody">Action completed.</div>
        <button class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Dashboard JS -->
  <script src="/dashboard.js"></script>
</body>
</html>
